<div class="flexcol">
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name">{{localize "ATOW.traits.trait"}}</div>
      <div class="item-rank">{{localize "ATOW.mechanic.rank"}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize "ATOW.sheet.createItem"}}" data-type="trait"><i class="fas fa-plus"></i> {{localize "ATOW.sheet.addItem"}}</a>
      </div>
    </li>
    {{#each traits as |item|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="use-item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <input type="text" class="item-name-field" data-dtype="String" value="{{item.name}}"/>
      </div>
      <div class="item-rank item-prop">
        <input class="item-rank-field" type="number" value="{{item.system.rank}}"/>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>