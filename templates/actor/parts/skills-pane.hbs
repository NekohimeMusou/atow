<div class="items-list flexcol">
  <ol class="items-list">
    <li class="item flexrow items-header">
      <div class="item-name">{{localize "ATOW.skills.skill"}}</div>
      <div class="item-total">{{localize "ATOW.skills.total"}}</div>
      <div class="item-tn">{{localize "ATOW.mechanic.tn"}}</div>
      <div class="item-complexity">{{localize "ATOW.skills.complexity"}}</div>
      <div class="item-link">{{localize "ATOW.mechanic.link"}} 1</div>
      <div class="item-link">{{localize "ATOW.mechanic.link"}} 2</div>
      <div class="item-rank">{{localize "ATOW.mechanic.rank"}}</div>
      <div class="item-xp">{{localize "ATOW.mechanic.xp"}}</div>
      <div class="item-controls">
        <a class="item-control item-create" title="{{localize "ATOW.sheet.createItem"}}" data-type="skill"><i class="fas fa-plus"></i> {{localize "ATOW.sheet.addItem"}}</a>
      </div>
    </li>
    {{#each skills as |item|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="use-item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class="item-total item-prop">
        <input type="number" value="{{item.system.total}}" disabled/>
      </div>
      <div class="item-tn item-prop">
        <input type="number" value="{{item.system.tn}}" disabled/>
      </div>
      <div class="item-complexity item-prop">
        <select class="item-complexity-select">
            {{selectOptions ../ATOW.complexityRatings selected=item.system.complexity}}
        </select>
      </div>
      <div class="item-link item-prop">
        <select class="item-link-select" data-link-field="link1">
          {{selectOptions ../ATOW.stats selected=item.system.link1}}
        </select>
      </div>
      <div class="item-link item-prop">
        <select class="item-link-select" data-link-field="link2">
          {{selectOptions ../ATOW.stats selected=item.system.link2 blank="---"}}
        </select>
      </div>
      <div class="item-rank item-prop">
        <input type="number" value="{{item.system.rank}}" disabled/>
      </div>
      <div class="item-xp item-prop">
        <input type="number" class="item-xp-field" min="0" placeholder="0" value="{{item.system.xp}}" data-dtype="Number"/>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>